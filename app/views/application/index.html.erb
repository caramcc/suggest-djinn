<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">

    <h1>SuggestDjinn</h1>
    <p>An entertainment suggestion service for when you have no idea what to do with your life.</p>
    <% if current_user %>
      <p><a class="btn btn-primary btn-lg" href="/user/<%= current_user.id %>/suggestions" role="button">View Suggestions</a></p>
    <% else %>
      <p><a class="btn btn-primary btn-lg" href="/login" role="button">Login &raquo;</a></p>
    <% end %>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <% if current_user %>
      <div class="col-md-6">
        <h2>Rate Things</h2>
        <p>Rate Things in order to get some suggestions to see what you might like </p>
        <p><a class="btn btn-default" href="/rate" role="button">Rate &raquo;</a></p>
      </div>

    <% else %>
      <div class="col-md-6">
        <h2>Sign Up</h2>
        <p>Sign up so you can rate things to get suggestions </p>
        <p><a class="btn btn-default" href="/signup" role="button">Register &raquo;</a></p>
      </div>

    <% end %>
    <div class="col-md-6">
      <h2>Top Rated Things</h2>
      <p>See what's overall very popular right now.  </p>
      <p><a class="btn btn-default" href="#" role="button">Coming soon though &raquo;</a></p>
    </div>
  </div>
</div>