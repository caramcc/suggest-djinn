<div class="container">
  <%= form_for :user, url: '/user', class: 'form-group' do |f| %>

    <h2 class="form-signin-heading">Register</h2>

    <%= f.text_field :username, class: 'form-control', placeholder: 'Username', autofocus: true %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
    <%= f.submit 'Register', class: 'btn btn-default' %>

  <% end %>
  <small>By registering for an account, you agree to the <a href="/tos">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>.</small>
</div>